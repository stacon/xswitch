{
  "extends": [
    "airbnb",
    "prettier",
    "plugin:node/recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error",
    "quotes": [
      "error",
      "single"
    ],
    "no-console": "warn",
    "no-process-exit": "off",
    "object-shorthand": "off"
  },
  "overrides": [
    {
      "files": [
        "*.test.js"
      ],
      "rules": {
        "no-undef": "off"
      }
    }
  ]
}
